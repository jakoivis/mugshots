
@font-face
    font-family: ArchivoBlack
    font-weight: bold
    src: url("ArchivoBlack.otf") format("opentype")

html
    overflow-x: hidden

body
    position: relative
    overflow-x: hidden
    background-color: #EAEAEA
    margin: 0
    padding: 0

canvas
    margin: 0
    padding: 0
    position: absolute
    left:0
    top:0

#debugControls
    width: 200px
    top: 500px
    bottom: 0
    right: 0
    position: absolute

#debugControls > button
    width: 200px;
